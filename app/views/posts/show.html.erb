<!-- Post section -->
<h2>Post</h2>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.user.username %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Category:</strong>
  <%= @post.category.name %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<!-- Comments section -->
<h2>Comments</h2>
<%= render @post.comments %>

<!-- Add comment -->
<h2>Add a comment:</h2>
<%= render 'comments/form' %>